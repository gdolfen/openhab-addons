<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="ical"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Thing Type -->
	<thing-type id="calendar">
		<label>ICal Binding Thing</label>
		<description>The thing represents an ICal-Calendar</description>

		<channels>
		    <channel id="lastUpdate" typeId="LastUpdateType" />
		    <channel id="currentEvent" typeId="CurrentEventType" />
		    <channel id="currentEventStart" typeId="CurrentEventStartType" />
		    <channel id="currentEventEnd" typeId="CurrentEventEndType" />
		    <channel id="currentEventDescription" typeId="CurrentEventDescriptionType" />
			<channel id="nextEvent" typeId="NextEventType" />
			<channel id="nextEventDescription" typeId="NextEventDescriptionType" />
			<channel id="nextEventNotificationDate" typeId="NextEventNotificationDateType" />
			<channel id="nextEventStart" typeId="NextEventStartType" />
			<channel id="nextEventEnd" typeId="NextEventEndType" />
			<channel id="nextEventSwitch" typeId="nextEventSwitchType" />
			<channel id="nextEventNotificationSwitch" typeId="nextEventNotificationSwitchType" />
		</channels>

		<config-description>
            <parameter name="url" type="text" required="true">
                <label>URL Address</label>
                <description>The URL of the iCal-File</description>
            </parameter>		
            <parameter name="updateInterval" type="integer" required="false">
                <label>Update interval</label>
                <description>Time for updating the iCal-File in seconds (default=86400s)</description>
            </parameter>
            <parameter name="nextEventNotificationDateOffset" type="integer" required="false">
                <label>Event notification start offset</label>
                <description>Offset for the next event notification date in seconds (default=86400s)</description>
            </parameter>                        
		</config-description>

	</thing-type>

	<!-- Channel Types -->
    <channel-type id="LastUpdateType">
        <item-type>DateTime</item-type>
        <label>Last update</label>
        <description>Last update of the calendar</description>
    </channel-type>	
    <channel-type id="CurrentEventType">
        <item-type>String</item-type>
        <label>Current event</label>
        <description>Current event in the calendar</description>
    </channel-type>
    <channel-type id="CurrentEventStartType">
        <item-type>DateTime</item-type>
        <label>Current event start</label>
        <description>Current event start in the calendar</description>
    </channel-type>
    <channel-type id="CurrentEventEndType">
        <item-type>DateTime</item-type>
        <label>Current event end</label>
        <description>Current event end in the calendar</description>
    </channel-type>  
    <channel-type id="CurrentEventDescriptionType">
        <item-type>String</item-type>
        <label>Current event description</label>
        <description>Current event description in the calendar</description>
    </channel-type>             	
    <channel-type id="NextEventType">
        <item-type>String</item-type>
        <label>Next event</label>
        <description>Next event in the calendar</description>
    </channel-type>
    <channel-type id="NextEventDescriptionType">
        <item-type>String</item-type>
        <label>Next event description</label>
        <description>Next event description in the calendar</description>
    </channel-type>     
    <channel-type id="NextEventNotificationDateType">
        <item-type>DateTime</item-type>
        <label>Next event notification date</label>
        <description>Notification date for the next event in the calendar</description>
    </channel-type>     	
    <channel-type id="NextEventStartType">
        <item-type>DateTime</item-type>
        <label>Next event start</label>
        <description>Next event start in the calendar</description>
    </channel-type> 
    <channel-type id="NextEventEndType">
        <item-type>DateTime</item-type>
        <label>Next event end</label>
        <description>Next event end in the calendar</description>
    </channel-type>
    <channel-type id="nextEventSwitchType">
        <item-type>Switch</item-type>
        <label>Next event started</label>
        <description>Next event started in the calendar</description>
    </channel-type> 
    <channel-type id="nextEventNotificationSwitchType">
        <item-type>Switch</item-type>
        <label>Next event notification occured</label>
        <description>Next event notification occured in the calendar</description>
    </channel-type>              
</thing:thing-descriptions>
